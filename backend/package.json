{
  "name": "silentmeow-backend",
  "version": "0.1.0",
  "description": "Backend for silentmeow web application",
  "type": "module",
  "scripts": {
    "build": "npm install typescript && npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "silentmeow",
    "backend",
    "typescript",
    "express"
  ],
  "author": {
    "name": "iamrichardD",
    "url": "https://github.com/iamrichardD"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.11.30",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^1.2.2",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^1.2.2"
  }
}
